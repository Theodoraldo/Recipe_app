<h1 class="title has-text-white is-flex is-justify-content-center">Change your password</h1>

<div class="container is-flex is-justify-content-center">
  <div class="box" style="width: 45%;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <div class="control mt-1">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <div class="control mt-1">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "button is-info mt-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>