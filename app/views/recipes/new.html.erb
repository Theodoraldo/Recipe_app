<h1 class="title is-flex is-justify-content-center">New Recipe</h1>

<div class="container is-flex is-justify-content-center">
  <div class="box" style="width: 60%;">
    <%= form_with model: @recipe, url: recipes_path, method: :post, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: "label" %>
        <%= form.text_field :name, class: "input" %>
      </div>

      <div class="mb-3">
        <%= form.label :preparation_time,"Preparation Time (hours)", class: "label" %>
        <%= form.number_field :preparation_time, class: "input", step: 0.01 %>
      </div>

      <div class="mb-3">
        <%= form.label :cooking_time, "Cooking Time (hours)", class: "label" %>
        <%= form.number_field :cooking_time, class: "input", step: 0.01 %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "label" %>
        <%= form.text_area :description, class: "input" %>
      </div>

      <div class="mb-3">
        <%= form.label :public, class: "label" %>
        <%= form.label :public, "Yes" %>
        <%= form.radio_button :public, true, class: "mr-4" %>
        <%= form.label :public, "No" %>
        <%= form.radio_button :public, false %>
      </div>

      <div>
        <%= form.submit "Create Recipe", class: "button is-info" %>
      </div>
    <% end %>
  </div>
</div>